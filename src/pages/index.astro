  <script>
    let currentSlide = 0;
    const slides = document.querySelectorAll('.features-slider-item');
    const totalSlides = slides.length;
    const slideInterval = 4000;

    function nextSlide() {
      slides[currentSlide].classList.remove('active');
      currentSlide = (currentSlide + 1) % totalSlides;
      slides[currentSlide].classList.add('active');
    }

    setInterval(nextSlide, slideInterval);
  </script>

<style>
  .features-slider {
    display: flex;
    overflow: hidden;
    position: relative;
  }

  .features-slider-item {
    flex: 0 0 100%;
    opacity: 0;
    position: absolute;
    transition: opacity 1.5s ease, transform 1.5s ease;
  }

  .features-slider-item.active {
    opacity: 1;
    position: relative;
  }

  @keyframes slideInFromRight {
    0% {
      opacity: 0;
      transform: translateX(100%);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInFromLeft {
    0% {
      opacity: 0;
      transform: translateX(-100%);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .features-slider-item.active:nth-child(odd) {
    animation: slideInFromRight 1.5s forwards;
  }

  .features-slider-item.active:nth-child(even) {
    animation: slideInFromLeft 1.5s forwards;
  }
</style>
